# Example environment variables file for Face Recognition Project
# Copy this file to .env and adjust values as needed

# WandB configuration (for model evaluation/training logging)
export WANDB_API_KEY="your_wandb_api_key_here"
export WANDB_PROJECT="LPFMC"
export WANDB_ENTITY="Cooper-Union"

# Application configuration
export FACE_MODEL_PATH="models/resnet18_110.pth"
export FACE_DATA_ROOT="align/lfw-align-128"

# Hardware acceleration settings
# Set to 0 to disable CUDA (force CPU), 1 to enable if available
export CUDA_ENABLED=1

# Comment out to use all available CUDA devices
# export CUDA_VISIBLE_DEVICES=0 